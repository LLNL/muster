#!/bin/sh
#
# Sample cmake invocation for building Muster on a BG/P
#
# build type options are:
#   gnu-dynamic   xl-dynamic
#   gnu-static    xl-static
#
type=gnu-dynamic
if [ "" != "$1" ]; then
    type="$1"
fi

cmake \
    -D Boost_INCLUDE_DIR=/g/g21/gamblin2/opt/boost/include/boost-1_34_1 \
    -D CMAKE_TOOLCHAIN_FILE=../cmake/BlueGeneP-${type}.cmake \
    -D BUILD_TESTS=TRUE \
    ..

